<header>
  <nav>
    <%= link_to image_tag("logo.png"), root_path %>
    <% if user_signed_in? %>
      <ul class="left">
        <li>
          <%= link_to "Profile", user_path(current_user), class: "button" %>
        </li>
      </ul>
      <ul class="right">
        <li>
          <%= link_to "Sign Out", destroy_user_session_path, data: { turbo_method: :delete }, class: 'button' %>
        </li>
      </ul>
    <% else %>
      <ul class="right">
        <li>
          <%= link_to "Sign In", new_user_session_path, class: "button" %>
        </li>
        <li>
          <%= link_to "Sign Up", new_user_registration_path, class: "button" %>
        </li>
      </ul>
    <% end %>
  </nav>
</header>